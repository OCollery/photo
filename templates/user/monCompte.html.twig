{% extends 'user/MenuUser.html.twig' %}

{% block title %}Mon compte | {{ parent() }}{% endblock %}


{% block main %}
<div class="divMenuUser">
    <div class="col-xs-offset-1">
        <h1>Mon compte</h1>
    </div>

    <div class=" divMonCompte col-xs-offset-1">
        <label>Nom: </label> {{ user.nom }}<br>
        <label>Prénom: </label> {{ user.prenom }}<br>
        <label>Téléphone: </label> {{ user.telephone }}<br>
        <label>Mail: </label> {{ user.mail }}<br>
        <label>Rue: </label> {{ user.rue }}<br>
        <label>Code postal: </label> {{ user.codePostal }}<br>
        <label>Ville: </label> {{ user.ville }}<br>
    </div>
    <br>
    <div class="col-xs-offset-1">
        <form action="{{ path('edit') }}">
            <button class="btn btn-primary btn-lg"> Modifier mon profil </button>
        </form>
        <a href="{{ path('supprimerCompte') }}">Supprimer mon compte</a>
    </div>
</div>
{% endblock %}