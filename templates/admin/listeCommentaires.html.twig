{% extends 'admin/MenuAdmin.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block main %}
<div class="col-xs-offset-1">
    <h1>Liste des commentaires</h1>
</div>
<hr>
<div class="tableAjouterPhotoUtilisateur col-xs-offset-1">


<div class="tableAjouterPhoto col-xs-offset-1">
    <h2>Ajouter commentaires Ã  une prestation</h2>

    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <td>Prestation</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
        {% for prestation in prestations %}
            <tr>
