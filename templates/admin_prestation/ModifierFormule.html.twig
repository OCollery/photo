{% extends 'admin/MenuAdmin.html.twig' %}

{% block title %}Modifier Formules{% endblock %}

{% block main %}

<div class="tableModifierPrestation col-xs-offset-1">
    <h1>Modifier formule</h1>

    <table class="table table-hover">
        <thead>
            {% for prestation in prestations %}
            <tr class="table-primary">
                <th>{{ prestation.nom }}</th>
                <th>Prix</th>
                <th>DÃ©tail</th>
                <th colspan="2">Action</th>
            </tr>

        </thead>
        <tbody>
            {%  for formule in formules %}
                {% if formule.noPrestation.id == prestation.id %}
                <tr>
                    <td>{{ formule.noFormule.nom }}</td>
                    <td>{{ formule.prix }}</td>
                    <td>{{ formule.detail }}</td>
                    <td>
                        <form action="{{ path('admin_modifierFormule',{'id':formule.id}) }}">
                            <button class="btn btn-primary"> Modifier </button>
                        </form>
                    </td>
                    <td>
                        <form action="{{ path('admin_supprimerFormule',{'id':formule.id}) }}">
                            <button class="btn btn-primary"> Supprimer formule </button>
                        </form>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
            {% endfor %}
        </tbody>
    </table>
</div>


<hr class="col-xs-12">

<div class="col-xs-offset-1">
    <div class="ajouterPrestation">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary  col-xs-offset-2"> Modifier </button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}